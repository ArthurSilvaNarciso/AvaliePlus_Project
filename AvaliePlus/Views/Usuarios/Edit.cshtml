@using AvaliePlus.Models
@model Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container" style="max-width: 600px;">
    <div class="card bg-dark text-white border-secondary mt-5 p-4 rounded-3 shadow">
        <h2 class="text-center mb-4">Editar Usuário</h2>

        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control bg-dark text-light border-secondary" />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label">Tipo de Usuário</label>
                <select asp-for="Role" class="form-select bg-dark text-light border-secondary">
                    <option value="Usuario">Usuário</option>
                    <option value="Admin">Administrador</option>
                </select>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-outline-light ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>
