@model AvaliePlus.Models.Filme

@{
    ViewData["Title"] = "Editar Filme";
}

<h1 style="color: #f5f5f5; font-size: 2rem; margin-bottom: 1rem;">Editar Filme</h1>

<div class="form-wrapper">
    <form asp-action="Edit" class="styled-form">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Titulo"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Diretor"></label>
            <input asp-for="Diretor" class="form-control" />
            <span asp-validation-for="Diretor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genero"></label>
            <input asp-for="Genero" class="form-control" />
            <span asp-validation-for="Genero" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ano"></label>
            <input asp-for="Ano" class="form-control" />
            <span asp-validation-for="Ano" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DuracaoMinutos"></label>
            <input asp-for="DuracaoMinutos" class="form-control" />
            <span asp-validation-for="DuracaoMinutos" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImagemUrl"></label>
            <input asp-for="ImagemUrl" class="form-control" />
            <span asp-validation-for="ImagemUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sinopse"></label>
            <textarea asp-for="Sinopse" class="form-control"></textarea>
            <span asp-validation-for="Sinopse" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-save">Salvar</button>
        <a asp-action="Index" class="btn-back">Voltar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .form-wrapper {
            max-width: 700px;
            margin: 2rem auto;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

        .styled-form .form-group {
            margin-bottom: 1rem;
        }

        .styled-form label {
            font-weight: 600;
            color: #2d2d2d;
        }

        .styled-form .form-control {
            border-radius: 10px;
            padding: 0.5rem;
            border: 1px solid #ccc;
            width: 100%;
        }

        .btn-save {
            background-color: #4f46e5;
            color: white;
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 999px;
            font-weight: bold;
            transition: 0.3s;
            cursor: pointer;
        }

            .btn-save:hover {
                background-color: #4338ca;
            }

        .btn-back {
            margin-left: 1rem;
            padding: 0.5rem 1.5rem;
            background-color: #e5e7eb;
            border-radius: 999px;
            text-decoration: none;
            color: #111827;
            font-weight: bold;
        }

            .btn-back:hover {
                background-color: #d1d5db;
            }
    </style>
}
